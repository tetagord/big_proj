extends pug/base

append vars
	- html.classList.push("page-index")
	- meta.charset = "utf-8"
	- meta.description = "Shuledas"
	- title = "Shuledas"
	- meta.viewport = "width=device-width, initial-scale=1"

block content
	include header.pug
	main
		.container
			.row
				.col-12.col-lg-6.article-block  
					h1.h1 
						span.h-title Статьи
							span.h-qty 325
					.node-video
						img(src="https://via.placeholder.com/600x600")
						//- iframe(src="https://www.youtube.com/embed/668nUCeBHyY" frameborder="0" allow="autoplay; encrypted-media" allowfullscreen)
						a(href="#").node-video--type Карьера и свой бизнес
						h2.h2 The 7 TED Talks every designer should watch
						p.node-video--desr Since the first conference way back in 1984, TED Talks have inspired us, captivated us, and given us something thought-provoking to watch over lunch
						.author.flex
							.author--avatar
								img(src="https://via.placeholder.com/56x56") 
							.author--info.align-self-center
								p.author--name By Margaret Kelsey
								p.author--date Sep 20, 2018
						a(href="/post.html").btn.btn--article Читать

				.col-12.col-lg-6.article-block
					.row
						h2.h2.h2-article Обратите внимание

						.node-article.flex.flex-column.col-12
							.row
								mixin article_item(tag,name,author)
									.node-article--item.col-12.col-md-6.col-lg-12
										.row
											.node-article--img
												img(src="https://via.placeholder.com/200x200")
											.node-article--info
												a(href="/news.html").node-article--tag=tag
												p.node-article--name=name
												p.node-article--author=author
											a(href="/post.html").link-mask
								+article_item("новости", "Его величество рислинг", "Jordan Mills")
								+article_item("Образование", "Государственные VS частные школы Германии", "Cheryl Spencer")
								+article_item("Карьера и свой бизнес", "Как сэкономить студенту ВУЗа Германии?", "Justin Carlson")
								+article_item("культура", "Как улучшить свои шансы на рынке труда германии, если вы — гуманитарий?", "Margaret Riley")
								+article_item("семья", "Его величество рислинг", "Jordan Mills")

	include footer.pug
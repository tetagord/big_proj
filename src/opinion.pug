extends pug/base

append vars
	- html.classList.push("page-index")
	- meta.charset = "utf-8"
	- meta.description = "Shuledas"
	- title = "Shuledas"
	- meta.viewport = "width=device-width, initial-scale=1"

block content
	.opinion
		include header.pug
		main
			.container 
				.col-12.node-block
					.row
						.node-top.flex.justify-content-between
							h1.h1 
								span.h-title Мнения
									span.h-qty 325 

			.container 
				.col-12.news-page
					.row
						mixin article_item(name,author)
							.node-article--item.col-12.col-lg-6.flex
								.row
									.node-article--img
										img(src="https://via.placeholder.com/200x200")
									.node-article--info 
										p.node-article--name=name 
										.author.author--maening.flex
											.author--avatar.meaning--avatar
												img(src="https://via.placeholder.com/64x64") 
											.author--info.align-self-center
												p.author--name=author
												p.author--ho Video Blogger with 1,4 billion Subscribers
									a(href="#").link-mask
						+article_item( "Его величество рислинг", "Jordan Mills")
						+article_item( "Его величество рислинг", "Bruce Lewis")
						+article_item( "Государственные VS частные школы Германии", "Cheryl Spencer")
						+article_item( "Государственные VS частные школы Германии", "Cheryl Spencer")
						+article_item( "свой бизнес", "Как сэкономить студенту ВУЗа Германии?", "Justin Carlson")
						+article_item( "свой бизнес", "Как сэкономить студенту ВУЗа Германии?", "Justin Carlson")
						+article_item( "Как улучшить свои шансы на рынке труда германии, если вы — гуманитарий?", "Margaret Riley")
						+article_item( "Как улучшить свои шансы на рынке труда германии, если вы — гуманитарий?", "Margaret Riley")
						+article_item( "Его величество рислинг", "Cheryl Carpenter")
						+article_item( "Его величество рислинг", "Jordan Mills")


		include footer.pug
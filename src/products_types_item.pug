								</div>
				.container.anfragen-block
					.row.align-items-center.flex-column
						.btn-details-wrap
							.btn Anfragen

		.block-line
		.container
			.col-12
				.row.justify-content-center
					.col-12
						h2.h2 Choose another plan 
					mixin benefit_item(summary,title,descr,icon,link)
						.col-12.col-md-6.col-xl-3
							.benefit-item
								a(href=link) 
								p.benefit--title=summary 
								 
								//- img(src=icon, alt="").benefit--icon
								.btn Подробнее

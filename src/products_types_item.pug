extends pug/base

append vars
	- html.classList.push("page-index")
	- meta.charset = "utf-8"
	- meta.description = "Shuledas"
	- title = "Shuledas"
	- meta.viewport = "width=device-width, initial-scale=1"
	<link rel="stylesheet" href="css/slider/jslider.css" type="text/css">

block content 
	include header.pug
	main.content   
		.product-banner 
			.product-banner-content
				h2 Finden Sie Kandidaten für Ihr Team, dort wo sie 

			img(src="images/type-bg.jpg", alt="")
			.container.product-types-btn.flex
				<a class="btn btn--candidates-relative" href="https://www.schuledas.com/job/ru/search/resume">Kandidaten finden</a>
				<a class="btn btn--candidates-relative" style="background: #29B8A4;" href="https://www.schuledas.com/job/ru/employer/services">Unsere produkte</a>
		.container.services-item
			.col-12
				.row
					.col-12
						h2.h2 Stellenanzeige veröffentlichen 
					.col-12.services-item-plan.flex

						.col-12.col-md-6.col-lg-4
							.product-type-item
